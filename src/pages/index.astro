---
import PageLayout from '../layouts/BaseLayout.astro'
import Section from '../components/Section.astro'
import Card from '../components/Card.astro'
import Label from '../components/Label.astro'
import SkillLayout from '../components/SkillLayout.astro'
import PostPreview from '@/components/blog/PostPreview.astro'

import { Image } from 'astro:assets'
import astro from '../assets/profile_photo_2.jpeg'

import { getAllPosts, sortMDByDate } from '@/utils'

const languages = ['English', 'Slovak']
const programmingLanguages = ['Python', 'Rust', 'Go', 'Julia', 'SQL']

const dataScience = [
	'Unsupervised ML',
	'Supervised ML',
	'Clustering',
	'LightGBM',
	'TensorFlow',
	'PyTorch',
	'Scikit-Learn',
	'shap',
	'PySpark',
	'Polars',
	'SQL (Oracle)',
	'Data Bricks',
	'AWS',
	'Azure'
]

const softwareDevAndDevOps = [
	'Git',
	'Gitlab CI/CD',
	'Docker',
	'Linux',
	'REST API',
	'ReactJS',
	'Astro',
	'Nginx',
	'Bash'
]

const others = [
	'LaTeX',
	'Theoretical Biophysics',
	'Chemical Physics',
	'Bioinformatics and Metalloprotein Design'
]

const MAX_POSTS = 5
const allPosts = await getAllPosts()
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS)
---

<PageLayout meta={{ title: 'Home' }}>
	<div class='flex w-full flex-col gap-y-10'>
		<section class='flex flex-col items-center gap-y-7'>
			<Image
				src={astro}
				alt='profile photo'
				class='h-28 w-auto rounded-full bg-[#FFBE98] p-2'
				loading='eager'
			/>

			<div class='flex flex-col items-center gap-y-4'>
				<h1 class='text-3xl font-bold'>Daniel Herman</h1>
				<div class='flex flex-wrap justify-center gap-x-7 gap-y-3'>
					<Label title='Data Scientist'>
						<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' class='h-5 w-5' slot='icon'
							><path
								fill='currentColor'
								d='M4.615 20q-.69 0-1.152-.462Q3 19.075 3 18.385v-9.77q0-.69.463-1.152Q3.925 7 4.615 7H9V5.615q0-.69.463-1.152Q9.925 4 10.615 4h2.77q.69 0 1.153.463q.462.462.462 1.152V7h4.385q.69 0 1.152.463q.463.462.463 1.152v9.77q0 .69-.462 1.152q-.463.463-1.153.463zm0-1h14.77q.23 0 .423-.192q.192-.193.192-.423v-9.77q0-.23-.192-.423Q19.615 8 19.385 8H4.615q-.23 0-.423.192Q4 8.385 4 8.615v9.77q0 .23.192.423q.193.192.423.192M10 7h4V5.615q0-.23-.192-.423Q13.615 5 13.385 5h-2.77q-.23 0-.423.192q-.192.193-.192.423zM4 19V8z'
							></path></svg
						>
					</Label>
					<Label title='Prague'>
						<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' class='h-5 w-5' slot='icon'
							><path
								fill='currentColor'
								d='M12.003 11.73q.668 0 1.14-.475q.472-.475.472-1.143t-.475-1.14q-.476-.472-1.143-.472t-1.14.476q-.472.475-.472 1.143t.475 1.14q.476.472 1.143.472M12 19.677q2.82-2.454 4.458-4.991q1.638-2.538 1.638-4.39q0-2.744-1.737-4.53T12 3.981q-2.621 0-4.359 1.785t-1.737 4.53q0 1.852 1.638 4.39q1.639 2.537 4.458 4.99m0 1.343q-3.525-3.117-5.31-5.814q-1.786-2.697-1.786-4.909q0-3.173 2.066-5.234Q9.037 3 12 3t5.03 2.062q2.066 2.061 2.066 5.234q0 2.212-1.785 4.909q-1.786 2.697-5.311 5.814m0-10.904'
							></path></svg
						>
					</Label>
					<Label title='GitHub' as='a' href='https://github.com/detrin' target='_blank'>
						<svg
							xmlns='http://www.w3.org/2000/svg'
							viewBox='0 0 24 24'
							slot='icon'
							class='h-5 w-5 text-foreground/75'
							><path
								d='M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z'
							></path></svg
						>
					</Label>
					<Label
						title='Connect on Linkedin'
						as='a'
						href='https://www.linkedin.com/in/herman-daniel/'
						target='_blank'
					>
						<svg
							xmlns='http://www.w3.org/2000/svg'
							viewBox='0 0 16 16'
							slot='icon'
							class='h-5 w-5 text-foreground/75'
							><path
								fill='currentColor'
								d='M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854zm4.943 12.248V6.169H2.542v7.225zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248c-.015-.709-.52-1.248-1.342-1.248S2.4 3.226 2.4 3.934c0 .694.521 1.248 1.327 1.248zm4.908 8.212V9.359c0-.216.016-.432.08-.586c.173-.431.568-.878 1.232-.878c.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252c-1.274 0-1.845.7-2.165 1.193v.025h-.016l.016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225z'
							></path></svg
						>
					</Label>
				</div>
			</div>
		</section>

		<Section title='About'>
			<p class='text-muted-foreground'>
				I love building stuff using data and code. I am a data scientist with a background in
				theoretical biophysics and chemical physics. I am passionate about data science, machine
				learning, and software development.
			</p>
		</Section>
		{
			allPostsByDate.length > 0 && (
				<Section title='Recent Posts'>
					<ul class='flex flex-col gap-y-2'>
						{allPostsByDate.map((p) => (
							<li class='flex flex-col gap-x-2 sm:flex-row'>
								<PostPreview post={p} />
							</li>
						))}
					</ul>
				</Section>
			)
		}

		<Section title='Experience'>
			<Card
				heading='Similarweb'
				subheading='Data Scientist (full time)'
				date='April 2024 - present'
				imagePath='/src/assets/similarweb.png'
				altText='Lorem, ipsum dolor sit'
				imageClass='h-12 w-auto md:-left-16'
			>
				<ul class='ml-4 list-disc text-muted-foreground'>
					<li>
						The largest project is on automatic segmentation of visits using keyword searches of
						domains (e.g. Smartphones for Samsung). Working in a newly created team.

						<li>Unsupervised ML / clustering / statistics / LLM / embeddings</li>
						<li>Python / pyspark / Data Bricks / AWS / polars</li>
					</li>
				</ul>
			</Card>
			<Card
				heading='Nova TV'
				subheading='Data Scientist (bodyshop via Home Credit International)'
				date='August 2023 - March 2024'
				imagePath='/src/assets/novatv.jpeg'
				altText='Lorem, ipsum dolor sit'
				imageClass='h-12 w-auto md:-left-16'
			>
				<ul class='ml-4 list-disc text-muted-foreground'>
					<li>
						The project was oriented on the short-term prediction of shares in linear TV broadcasts.
						Newly created small team, design of the model pipeline from scratch. Exploration for
						target definition. Data cleaning, setup of ETLs on keboola. Design of features and model
						training. Iterations with end customers.

						<li>Supervised ML / regression / LightGBM</li>
						<li>Python / polars / Rust / keboola / Go / Azure</li>
					</li>
				</ul>
			</Card>
			<Card
				heading='Home Credit International'
				subheading='Data Scientist (full time)'
				date='October 2021 - March 2024'
				imagePath='/src/assets/homecredit.png'
				altText='Lorem, ipsum dolor sit'
				imageClass='h-12 w-auto md:-left-16'
			>
				<ul class='ml-4 list-disc text-muted-foreground'>
					<li>
						Skilled in developing risk models for collections and underwriting through Logistic
						Regression, LightGBM, and statistical tests. Resurrection of an internal package for
						scorecard development and improving it significantly. Experienced in speech-to-text
						processing utilizing TensorFlow and LightGBM for voice recognition projects. Proficient
						in time series prediction using SARIMAX and Prophet for confidence interval estimation
						and alarm triggering. Creating a comprehensive internal Spark cookbook. Also, adept at
						light DevOps and Linux support and serving static React websites using nginx.

						<li>
							Supervised ML / classification / LightGBM / Logistic Regression / TensorFlow / PyTorch
							/ shap / pyspark
						</li>
						<li>Python / SQL (Oracle) / polars / Linux / Azure</li>
					</li>
				</ul>
			</Card>
			<Card
				heading='IOCB'
				subheading='Student working in academia (part time)'
				date='October 2021 - March 2024'
				imagePath='/src/assets/uochb2.jpg'
				altText='Lorem, ipsum dolor sit'
				imageClass='h-12 w-auto md:-left-16'
			>
				<ul class='ml-4 list-disc text-muted-foreground'>
					<li>
						Using protein fragments from the PDB I developed a method for constructing small
						metallopro- teins.

						<li>Python / Unsupervised ML / Research in computational chemistry</li>
					</li>
				</ul>
			</Card>
		</Section>

		<Section title='Education'>
			<Card
				heading='Master’s degree at Charles university in Prague'
				subheading='Theoretical Biophysics and Chemical Physics'
				date='September 2020 - February 2023'
				imagePath='/src/assets/charles_university.png'
				altText='Lorem, ipsum dolor sit'
				imageClass='h-12 w-auto md:-left-16'
			>
				<ul class='ml-4 list-disc text-muted-foreground'>
					<li>
						Conducted in-depth research on Redfield equations, resulting in a universally applicable
						improve- ment technique of a given set of integrodifferential equations.

						<li>Thesis: https://github.com/detrin/Master-Thesis/blob/main/thesis.pdf</li>
					</li>
				</ul>
			</Card>
			<Card
				heading='Bachelor’s Degre at Charles university in Prague'
				subheading='General Physics'
				date='September 2017 - September 2020'
				imagePath='/src/assets/charles_university.png'
				altText='Lorem, ipsum dolor sit'
				imageClass='h-12 w-auto md:-left-16'
			/>
		</Section>

		<Section title='Skills'>
			<SkillLayout title='Languages' skills={languages} />
			<SkillLayout title='Programming Languages' skills={programmingLanguages} />
			<SkillLayout title='Data Science' skills={dataScience} />
			<SkillLayout title='SoftwareDev and DevOps' skills={softwareDevAndDevOps} />
			<SkillLayout title='Others' skills={others} />
		</Section>
	</div>
</PageLayout>
